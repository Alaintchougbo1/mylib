# Variables d'environnement pour le projet Library Management System

# === BACKEND (Symfony) ===
# Copy to backend/.env and update values
DATABASE_URL=mysql://library_user:library_password@db:3306/library_db?serverVersion=8.0&charset=utf8mb4
JWT_SECRET_KEY=%kernel.project_dir%/config/jwt/private.pem
JWT_PUBLIC_KEY=%kernel.project_dir%/config/jwt/public.pem
JWT_PASSPHRASE=
APP_ENV=dev
APP_SECRET=changeme_random_secret_key_here

# === FRONTEND (Next.js) ===
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# === MYSQL ===
MYSQL_ROOT_PASSWORD=root
MYSQL_DATABASE=library_db
MYSQL_USER=library_user
MYSQL_PASSWORD=library_password
